<%- include('partials/header') -%>
<div class="container">
  <div class="buttons form">
    <h3>Register</h3>
   <% if(exist) { %>
      <p><%= exist %></p>
   <% } %>
   <% if(min) { %>
    <p><%= min %></p>
 <% } %>
    <form action="/users/register" method="POST">
        <input class="form-control" type="text" name="name" id="name" placeholder="Enter Name" required>
        <input class="form-control" type="email" name="email" id="email" placeholder="Enter Email" required>
        <input class="form-control" type="password" name="password" id="password" placeholder="Enter Password" required>
        <input class="form-control" type="number" name="age" id="age" placeholder="Enter Age" required>
        <input class="form-control" type="tel" name="phone" id="phone" placeholder="Enter Numbber" required
        >
        <input class="form-submit" type="submit" value="Register">
    </form>
  </div>
<%- include('partials/footer') -%>